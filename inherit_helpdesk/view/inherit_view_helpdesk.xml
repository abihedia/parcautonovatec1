<odoo>
<data>


        <record id="inherit_ticket_view_form" model="ir.ui.view">
                <field name="name">ticket.form.inherit</field>
                <field name="model">helpdesk.ticket</field>
                <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
                <field name="arch" type="xml">
                    <xpath expr="//field[@name='partner_id']" position="after">
                        <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/field[@name='product_id']" position="move"/>
                    </xpath>
                </field>
        </record>


    <!-- view Kanban -->
		<record model="ir.ui.view" id="ticket_kanban">
			<field name="name">ticket.kanban.inherit</field>
			<field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_kanban"/>
			<field name="arch" type="xml">
                   <xpath expr="//field[@name='commercial_partner_id']" position="after" >
                            <div><field name="product_id"/></div>
                    </xpath>

			</field>
		</record>

</data>
</odoo>